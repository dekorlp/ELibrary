<Window x:Class="ELibraryManager.NewUserDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Register a New Book" Height="300" Width="300" ShowInTaskbar="False">
    <Grid>
        <Button Content="create" HorizontalAlignment="Left" Margin="21,127,0,0" VerticalAlignment="Top" Width="75" Command="{Binding CreateUserCommand}" />
        <Label Content="Name" HorizontalAlignment="Left" Margin="21,34,0,0" VerticalAlignment="Top"/>
        <Label Content="Matrikelnumber" HorizontalAlignment="Left" Margin="21,74,0,0" VerticalAlignment="Top"/>
        <TextBox HorizontalAlignment="Left" Height="23" Margin="123,38,0,0" TextWrapping="Wrap" Text="{Binding Path=Name, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" VerticalAlignment="Top" Width="120"/>
        <TextBox HorizontalAlignment="Left" Height="23" Margin="123,77,0,0" TextWrapping="Wrap" Text="{Binding Path=Matrikelnumber, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" VerticalAlignment="Top" Width="120"/>

    </Grid>
</Window>
